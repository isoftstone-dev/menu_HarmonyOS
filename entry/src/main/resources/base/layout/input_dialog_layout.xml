<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:alert_background"
        ohos:left_margin="10vp"
        ohos:orientation="vertical"
        ohos:right_margin="10vp"
        >

        <Text
            ohos:id="$+id:input_dialog_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="20vp"
            ohos:text="手机号："
            ohos:text_color="black"
            ohos:text_size="30vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:weight="1"
            >

            <TextField
                ohos:id="$+id:input_dialog_text_field"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:hint="请输入您的电话号码"
                ohos:padding="20vp"
                ohos:text_alignment="top"
                ohos:text_color="black"
                ohos:text_size="20vp"

                />

            <Component
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="black"
                ohos:left_margin="20vp"
                ohos:right_margin="20vp"/>
        </DirectionalLayout>


        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="bottom|right"
            ohos:orientation="horizontal"
            >

            <Button
                ohos:id="$+id:input_dialog_cancle"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:padding="20vp"
                ohos:text="Cancle"
                ohos:text_color="red"
                ohos:text_size="20vp"/>

            <Button
                ohos:id="$+id:input_dialog_ok2"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:padding="20vp"
                ohos:right_margin="10vp"
                ohos:text="OK"
                ohos:text_color="black"
                ohos:text_size="20vp"/>
        </DirectionalLayout>


    </DirectionalLayout>

</DirectionalLayout>